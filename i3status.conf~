# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
}

order += "spotify"
order += "weather_yahoo"
order += "arch_updates"
order += "disk /"
order += "ip-address"
order += "wireless _first_"
order += "load"
#order += "ram_usage"
order += "battery_level"
order += "tztime local"

spotify {
    format = "{title} by {artist} -> {time}"
    format_down = "no Spotify"
    on_click 1 = "exec /usr/sbin/playerctl play-pause"
}

weather_yahoo {
	woeid = 12792873
	format_today = "WEATHER: {icon}{temp}°{units} {text}"
	forecast_days = 5
	units = 'f'
    on_click 1 = "exec chromium https://www.wunderground.com/q/zmw:80014.1.99999?sp=KCOAUROR14"
}

wireless _first_ {
        format_up = "W: (%quality at %essid) %ip"
        format_down = "W: down"
}

#ethernet _first_ {
#        # if you use %speed, i3status requires root privileges
#        format_up = "E: %ip (%speed)"
#        format_down = "E: down"
#}

ram_usage {
}

battery_level {
	notify_low_level = True
	notify_low_level = All
	color_good = '#00AA00'
	color_bad = '#AA0000'
	color_degraded = '#AAAA00'
	color_charging = '#FFFF00'
}

ip-addess {

}


tztime local {
        on_click 1 = "exec chromium https://calendar.google.com"
        format = "%Y-%m-%d %H:%M:%S"
}

load {
        format = "%1min"
}

disk "/home/" {
        format = "%avail"
}

